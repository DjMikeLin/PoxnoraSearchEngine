<main>
    <select id="selectRune" class="form-control" name="">
        <option selected>Select Ability</option>
        {{#each abilities}}
            <option value="{{id}}">
                {{name}}
                {{#if level includeZero=false}}
                    {{level}}
                {{/if}} 
            </option>
        {{/each}}
    </select>

    <form action="/abilities" method="POST">
        <select class="form-control" name="faction">
            <option value="" selected>All Factions</option>
            <option value="Forglar Swamp">Forglar Swamp</option>
            <option value="Forsaken Wastes">Forsaken Wastes</option>
            <option value="Ironfist Stronghold">Ironfist Stronghold</option>
            <option value="K'thir Forest">K'thir Forest</option>
            <option value="Savage Tundra">Savage Tundra</option>
            <option value="Shattered Peaks">Shattered Peaks</option>
            <option value="Sundered Lands">Sundered Lands</option>
            <option value="Underdepths">Underdepths</option>
        </select>

        <select class="form-control" name="sort">
            <option value="" selected>Sort By:</option>
            <option value="descend">Sort By Nora Descending</option>
            <option value="ascend">Sort By Nora Ascending</option>
            <option value="name">Sort By Name</option>
        </select>

        <button class="btn btn-lg btn-dark btn-outline-success">
            Find
        </button>
    </form>

    {{#each abilities}}
        <div class="runeInfo">
            <img class="runeImage" data-lazy="https://d2aao99y1mip6n.cloudfront.net/images/ability_icons/small/icon_{{iconName}}.gif" alt="Image not found">
            <div class="container">
                <p>Name: {{name}}</p>
                <p>Description: {{shortDescription}}</p>
                <p>AP Cost: {{apCost}}</p>
                <p>Level: {{level}}</p>
                <p>Cooldown: {{cooldown}}</p>
                <p>Nora Cost: {{noraCost}}</p>
            </div>
        </div>
    {{/each}}
</main>
