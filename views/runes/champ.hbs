<main>
    <select id="selectRune" class="form-control">
        <option selected>Select Champion</option>
        {{#each champs}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>

    <form action="">
        <select id="selectFaction" class="form-control" name="faction">
            <option value="fs">Forglar Swamp</option>
            <option value="fw">Forsaken Wastes</option>
            <option value="is">Ironfist Stronghold</option>
            <option value="kf">K'thir Forest</option>
            <option value="st">Savage Tundra</option>
            <option value="sp">Shattered Peaks</option>
            <option value="sl" selected>Sundered Lands</option>
            <option value="ud">Underdepths</option>
        </select>

        <a id="pageLink" href="/champions/">
            <button class="btn btn-lg btn-dark btn-outline-success">
                Find
            </button>
        </a>
    </form>

    <a href="/champions/create">
        <button class="btn btn-lg btn-dark btn-outline-success">
            Create Champion
        </button>
    </a>

    {{#each champs}}
        <div class="runeInfo">
            <img class="runeImage" src="https://d2aao99y1mip6n.cloudfront.net/images/runes/lg/{{hash}}.jpg" alt="Image not found">
            <div class="container">
                <p>Name: {{name}}</p>
                <p>Description: {{description}}</p>
                <p>Range: {{minRng}} - {{maxRng}}</p>
                <p>Defense: {{defense}}</p>
                <p>Speed: {{speed}}</p>
                <p>Damage: {{damage}}</p>
                <p>Hit Points: {{hitPoints}}</p>
                <p>Size: {{size}}</p>
                <p>Rarity: {{rarity}}</p>
                <p>
                    Classes: 
                    {{#each classes}}
                        {{this}} 
                    {{/each}}
                </p>
                <p>
                    Races:
                    {{#each races}}
                        {{this}}
                    {{/each}}
                </p>
                <p>Nora Cost: {{noraCost}}</p>
                <p>Artist: {{artist}}</p>
                <p>
                    Factions:
                    {{#each factions}}
                        {{this}}
                    {{/each}}
                </p>
                <p>Expansion Released: {{runeSet}}</p>
                <p>Deck Limit: {{deckLimit}}</p>
                <p>
                    Starting Abilities:
                    {{#each startingAbilities}}
                        {{this.name}} |
                    {{/each}}
                </p>
                <p>
                    Upgrades:
                    {{#each abilitySets}}
                        {{#each this}}
                            {{#each this}}
                                {{!-- Upgrade {{@index}}: --}}
                                {{#each this}}
                                    {{this.name}} {{this.level}} Nora Cost: {{this.noraCost}}
                                {{/each}}  |
                            {{/each}}
                        {{/each}}
                    {{/each}}
                </p>
            </div>
        </div>
    {{/each}}
</main>