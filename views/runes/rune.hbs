<div class="runeInfo">
    {{#if hash}}
        <img id="runeImage" src="https://d2aao99y1mip6n.cloudfront.net/images/runes/lg/{{hash}}.jpg" alt="Image not found">
    {{/if}}
    {{#if iconName}}
        <img class="runeImage icon" data-lazy="https://d2aao99y1mip6n.cloudfront.net/images/ability_icons/small/icon_{{iconName}}.gif" alt="Image not found">
    {{/if}}
    <div class="container">
        <p>Name: {{name}}</p>
        {{#if description}}
            <p>Description: {{description}}</p>
        {{/if}}
        {{#if shortDescription}}
            <p>Description: {{shortDescription}}</p>
        {{/if}}
        {{#if apCost}}
            <p>AP Cost: {{apCost}}</p>    
        {{/if}}
        {{#if level}}
            <p>Level: {{level}}</p>
        {{/if}}
        {{#if flavorText}}
            <p>Flavor Text: {{flavorText}}</p>
        {{/if}}
        {{#if minRng}}
            <p>Range: {{minRng}} - {{maxRng}}</p>
        {{/if}}
        {{#if defense}}
            <p>Defense: {{defense}}</p>
        {{/if}}
        {{#if speed}}
            <p>Speed: {{speed}}</p>
        {{/if}}
        {{#if damage}}
            <p>Damage: {{damage}}</p>
        {{/if}}
        {{#if hitPoints}}
            <p>Hit Points: {{hitPoints}}</p>
        {{/if}}
        {{#if size}}
            <p>Size: {{size}}</p>
        {{/if}}
        {{#if rarity}}
            <p>Rarity: {{rarity}}</p>
        {{/if}}
        {{#if classes}}
            <p>
                Classes: 
                {{#each classes}}
                    {{this}} 
                {{/each}}
            </p>
        {{/if}}
        {{#if races}}
            <p>
                Races:
                {{#each races}}
                    {{this}}
                {{/each}}
            </p>
        {{/if}}
        <p>Nora Cost: {{noraCost}}</p>
        {{#if cooldown}}
            <p>Cooldown: {{cooldown}}</p>
        {{/if}}
        {{#if artist}}
            <p>Artist: {{artist}}</p>
        {{/if}}
        {{#if factions}}
            <p>
                Factions:
                {{#each factions}}
                    {{this}}
                {{/each}}
            </p>
        {{/if}}
        {{#if runeSet}}
            <p>Expansion Released: {{runeSet}}</p>
        {{/if}}
        {{#if deckLimit}}
            <p>Deck Limit: {{deckLimit}}</p>
        {{/if}}
        {{#if startingAbilities}}
            <p>
                Starting Abilities:
                {{#each startingAbilities}}
                    {{this.name}} |
                {{/each}}
            </p>
        {{/if}}
        {{#if abilitySets}}
            <p>
                Upgrades:
                {{#each abilitySets}}
                    {{#each this}}
                        {{#each this}}
                            {{#each this}}
                                {{this.name}} {{this.level}} Nora Cost: {{this.noraCost}}
                            {{/each}}  |
                        {{/each}}
                    {{/each}}
                {{/each}}
            </p>
        {{/if}}
    </div>
</div>
